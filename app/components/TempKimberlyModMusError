const [selectedFormatTours, setSelectedFormatTours] = useState('33tours');
const handleChange = (event) => {
    setSelectedFormatTours(event.target.value);
}


<div className="mb-3">
                        <label htmlFor="33tours" className="form-label">33 Tours</label>
                        <input type="radio" className="radio-control" value="33tours" id="33tours" name="33tours" required checked={selectedFormatTours === '33tours'} onChange={handleChange} ></input>
                    </div>
                    <div className="mb-3">
                        <label htmlFor="45tours" className="form-label">45 Tours</label>
                        <input type="radio" className="radio-control" value="45tours" id="45tours" name="45tours" required checked={selectedFormatTours === '45tours'} onChange={handleChange}></input>
                    </div>

