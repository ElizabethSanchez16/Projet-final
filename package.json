{
  "name": "movie_database",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm-run-all --parallel next:dev api:dev watch:css",
    "next:dev": "next dev",
    "api:dev": "json-server --watch app/basededonnees/db.json --port 3001",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "sassverscss": "sass ./app/Scss/style.scss ./app/styles.css --no-source-map",
    "watch:css": "sass --watch ./app/Scss/style.scss ./app/styles.css --no-source-map"

  },
  "dependencies": {
    "bootstrap": "^5.3.2",
    "next": "14.1.0",
    "react": "^18",
    "react-dom": "^18",
    "sass": "^1.87.0"
  },
  "devDependencies": {
    "json-server": "^1.0.0-beta.3",
    "npm-run-all": "^4.1.5"
  }
}
